s = 1px
$default = Arial, Helvetica, sans-serif

*
  background transparent
  border 0
  border-collapse collapse
  border-image none
  border-radius 0
  border-spacing 0
  box-shadow none
  box-sizing border-box
  clear none
  clip auto
  cursor auto
  font-family $default
  font-size medium
  height auto
  letter-spacing normal
  line-height normal
  margin 0
  outline none
  outline-offset 0
  padding 0
  position relative
  resize none
  text-align left
  text-decoration none
  text-indent 0
  text-shadow none
  text-transform none
  white-space normal
  width auto
  word-break normal
  word-spacing normal
  word-wrap break-word
  vertical-align baseline
  z-index auto
  -webkit-margin-before 0
  -webkit-margin-after 0
  -webkit-margin-start 0
  -webkit-margin-end 0

html
  *
    font-family inherit
    font-size inherit
    color inherit
    text-decoration inherit
    text-align inherit
    cursor inherit
    text-transform inherit
    white-space inherit
    word-break inherit
    word-spacing inherit
    word-wrap inherit

a,
br,
em,
img,
input,
label,
select,
span,
strong,
textarea
  display inline

div,
form,
h1,
h2,
h3,
h4,
h5,
h6
li,
ol,
ul,
  display block

a
  text-decoration none
  &:link
  &:visited
  &:hover
    text-decoration none

a:not([id]):not([class])
  text-decoration none
  border-bottom-width 1*s
  border-bottom-style none
  &:link
  &:visited
    text-decoration none
  &:hover
    text-decoration none
    border-bottom-style solid

img
  max-width 100%
  height auto
  width auto\9

ul, ol
  list-style circle outside
  li
    list-style inherit

input:-webkit-autofill,
input:-webkit-autofill:focus,
input:-webkit-autofill:active,
input:-webkit-autofill:hover
  background transparent !important
  background-color transparent !important
  background-image none !important
  color inherit !important

input[type="text"],
input[type="password"],
textarea
  width 100%
  padding 5*s 10*s
  height 30*s
  border-radius 3*s
  background white
  border 1*s solid #e6e6e6
  &:not([disabled]):hover
    border 1*s solid darken(#e6e6e6, 10)
  &:not([disabled]):focus
    border 1*s solid darken(#e6e6e6, 20)

textarea
  resize vertical

.line
  position relative
  float left
  width 100%
  clear both

  .columns
    .column
      float left

    &.columns2
      & > .column2
        width 100%
      & > .column1
        width 50%

    &.columns3
      & > .column3
        width 100%
      & > .column2
        width 66%
      & > .column1
        width 33%

    &.columns4
      & > .column4
        width 100%
      & > .column3
        width 75%
      & > .column2
        width 50%
      & > .column1
        width 25%

.centered
  position relative
  margin 0 auto
  width 100%
  clear both

.dotted
  text-decoration none
  border-bottom-width 1*s
  border-bottom-style dotted
  cursor pointer
  &:hover
    border-bottom-style solid

.t-left
  text-align left

.t-center
  text-align center

.t-right
  text-align right

.t-justify
  text-align justify

table
  &.e-center
    width 100%
    height 100%
    & > thead > tr > td
    & > thead > tr > th
    & > tbody > tr > td
    & > tbody > tr > th
      vertical-align middle
  &.table-schema
    & > tbody > tr
      vertical-align middle
    & > thead > tr > th
    & > tbody > tr > th
      font-weight bold
    & > thead > tr > th
    & > thead > tr > td
    & > tbody > tr > th
    & > tbody > tr > td
      padding 10*s 5*s
      min-height 20*s
      vertical-align middle

    &.table-contents
      border 1*s solid #dedede
      & > thead > tr > th
      & > thead > tr > td
        background #fff
      & > thead > tr > th
      & > thead > tr > td
      & > tbody > tr > th
      & > tbody > tr > td
        border-bottom 1*s solid #cecece
      & > tbody > tr:nth-child(even) > th
      & > tbody > tr:nth-child(odd) > th
        background #fff
      & > tbody > tr:nth-child(even) > td
        background #f1f1f1
      & > tbody > tr:nth-child(odd) > td
        background #f5f5f5