*
  margin 0
  padding 0
  border 0
  border-collapse collapse
  border-spacing 0
  box-sizing border-box
  outline 0
  outline-offset 0
  outline-style none
  background transparent
  color inherit
  font inherit
  font-style inherit
  font-family inherit
  font-size inherit
  resize none
  cursor inherit
  line-height normal
  text-align inherit

ul,
ol,
li
  display block

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section
  display block

ol,
ul,
  list-style-type none

table
  td,
  th
    height 100%
    min-height 100%
    vertical-align middle

q,
blockquote
  quotes none
  &:before,
  &:after
    content ''